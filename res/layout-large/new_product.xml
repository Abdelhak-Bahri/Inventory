<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1040dp" >

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="1040dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/deep_blue"
        android:orientation="vertical"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"
            android:text="CREER NOUVEAU PRODUIT"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CODE PRODUIT:"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
         
        <EditText
            android:id="@+id/editText1"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            
            android:background="@color/white"
            android:ems="10"
            android:hint="Votre code produit"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="SCANNER"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector"
             />

        </LinearLayout>

         <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal">
        
             <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N° DE SERIE:"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        <EditText
            android:id="@+id/editText2"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Code à barre ou QR code"
            android:inputType="textMultiLine" />
        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="SCANNER"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector"
             />
 		</LinearLayout>
 		
         <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal">
        <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESIGNATION:"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        <EditText
            android:id="@+id/editText3"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="EX: Bureau, table"
            android:inputType="textMultiLine" />
        </LinearLayout>

          <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal">
        <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE D'ACQUISITION:"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        <DatePicker
            android:id="@+id/datePicker1"
            android:layout_width="280dp"
            android:layout_height="wrap_content" 
            android:background="@color/white"
            android:calendarViewShown="false"/>

		</LinearLayout>
		<LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal">
        <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETAT:"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:entries="@array/state_arrays"
            android:prompt="@string/state_prompt" />
        
        </LinearLayout>
        
		<LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal">
        <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRIX D'ACHAT (DA):"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Prix"
            android:inputType="textMultiLine" />
		</LinearLayout>
		
		<LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal">
        <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N° FACTURE:"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Facture d'achat"
            android:inputType="textMultiLine" />
		</LinearLayout>
		
		<LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal">
        <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOM FICHIER:"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:entries="@array/state_arrays"
            android:prompt="@string/state_prompt" />
        
        </LinearLayout>


    </LinearLayout>
    </RelativeLayout>
